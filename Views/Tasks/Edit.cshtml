@using sharp_tasks.Enums
@model sharp_tasks.ViewModels.Task.TaskEditVM

@{
    ViewData["Title"] = "Edit Task";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>Edit Task</h2>
        <hr />

        <form asp-action="Edit" method="post">
            <input type="hidden" name="index" value="@ViewBag.taskIndex" />

            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LimiteDate" class="control-label"></label>
                <input asp-for="LimiteDate" class="form-control" type="date" />
                <span asp-validation-for="LimiteDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TaskState" class="control-label"></label>
                <select asp-for="TaskState" class="form-control" asp-items="Html.GetEnumSelectList<sharp_tasks.Enums.State>()">
                </select>
                <span asp-validation-for="TaskState" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Update Task</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}